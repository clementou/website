---
// Add your personal info here
const name = "Clement Ou";
const bio =
	"Infrastructure & ML Engineer focused on building scalable systems and intelligent solutions";
const projects = [
	{
		title: "CMU AI Poker",
		url: "https://poker.cmudsc.com/",
		description: "Led development and organization of $100k prize pool AI competition platform, scaling to 500+ users and 10k+ daily matches",
	},
	{
		title: "GPT-2 Training Pipeline",
		description: "Optimized GPT-2 (31M params) training on 10B tokens, achieving 0.33 HellaSwag score",
	},
	{
		title: "Twitter PageRank",
		description: "Built distributed graph processing system in Spark for analyzing 1M+ vertex social network",
	},
	{
		title: "MuZero Implementation",
		description: "Implemented deep reinforcement learning system with Monte Carlo Tree Search and GPU acceleration",
	},
	{
		title: "Zoom AI Companion Analysis",
		url: "https://www.linkedin.com/posts/shubhamshastri22_part-13-as-my-masters-program-draws-to-ugcPost-7189417441494544385-6LmH",
		description: "Best Team Project Award - Analysis of Zoom AI against NIST AI RMF & EU AI Act",
	},
];
const socials = {
	github: "https://github.com/clementou",
	linkedin: "https://linkedin.com/in/clementou",
	twitter: "https://twitter.com/clementou",
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- Add Google Fonts - just Playfair Display for the name -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Karla:wght@400;500&display=swap"
			rel="stylesheet"
		/>
		<title>{name} - Software Engineer</title>
		<!-- Umami Analytics -->
		<script
			is:inline
			defer
			src="https://cloud.umami.is/script.js"
			data-website-id="67537075-58dc-4bbd-9432-5583e2152b0e"></script>
	</head>
	<body class="bg-gray-50 text-gray-800 font-sans">
		<main class="max-w-2xl mx-auto px-4 py-16 space-y-12">
			<!-- Profile Section -->
			<div class="flex items-start gap-8">
				<img src="/clement.jpg" alt={name} class="w-32 object-cover" />
				<div>
					<div class="mb-4">
						<h1 class="text-4xl font-serif mb-2">{name}</h1>
						<p class="text-gray-600 font-sans">
							/'klɛmənt 'oʊ/ • 欧华 (Ōu Huá) • he/him
						</p>
					</div>
					<p class="text-gray-600 leading-relaxed mb-4 font-sans">
						{bio}
					</p>
					<a
						href="/resume.pdf"
						class="inline-block text-gray-600 hover:text-gray-900 border-b border-gray-300 hover:border-gray-900 transition-colors font-sans"
						data-umami-event="resume-click"
					>
						View Resume →
					</a>
				</div>
			</div>

			<!-- Projects Section -->
			<div class="space-y-6">
				<h2 class="text-2xl font-sans font-medium">
					Selected Projects
				</h2>
				<div class="space-y-4">
					{
						projects.map((project) =>
							project.url ? (
								<a
									href={project.url}
									class="block p-4 border border-gray-200 rounded-lg hover:border-gray-400 transition-colors font-sans"
									data-umami-event={`project-click-${project.title.toLowerCase().replace(/\s+/g, "-")}`}
								>
									<h3 class="text-lg font-medium mb-1">
										{project.title}
									</h3>
									<p class="text-gray-600 text-sm">
										{project.description}
									</p>
								</a>
							) : (
								<div class="block p-4 border border-gray-200 rounded-lg font-sans">
									<h3 class="text-lg font-medium mb-1">
										{project.title}
									</h3>
									<p class="text-gray-600 text-sm">
										{project.description}
									</p>
								</div>
							),
						)
					}
				</div>
			</div>

			<!-- Social Links -->
			<div class="flex gap-6">
				{
					Object.entries(socials).map(([platform, url]) => (
						<a
							href={url}
							class="text-gray-600 hover:text-gray-900"
							data-umami-event={`social-click-${platform}`}
						>
							<span class="sr-only">{platform}</span>
							<svg
								class="w-6 h-6"
								fill="currentColor"
								viewBox="0 0 24 24"
								aria-hidden="true"
							>
								{platform === "github" && (
									<path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" />
								)}
								{platform === "linkedin" && (
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
								)}
								{platform === "twitter" && (
									<path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
								)}
							</svg>
						</a>
					))
				}
			</div>

			<!-- GitHub Contributions -->
			<!-- <div class="border border-gray-200 rounded-lg p-4 bg-white">
				<img 
					src={`https://ghchart.rshah.org/${githubUsername}`}
					alt="GitHub Contributions Graph"
					class="w-full"
				/>
			</div> -->
		</main>
	</body>
</html>

<style>
	.font-serif {
		font-family: "Playfair Display", serif;
	}
	.font-sans {
		font-family: "Karla", sans-serif;
	}
</style>
